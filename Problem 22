#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int main() {
    srand(time(0));
    int number = rand() % 100;
    cout << "Guess whether the number is even or odd.\n";
    cout << "Enter 0 for even, 1 for odd: ";
    int guess;
    cin >> guess;
    if (guess != 0 && guess != 1) {
        cout << "Invalid input. Please enter 0 or 1 " << endl;
        return 0;
    }
    int actual = number % 2;
    cout << "The number was: " << number << endl;
    if (guess == actual) {
        cout << "Correct. You guessed right." << endl;
    } else {
        cout << "Incorrect. Better luck next time." << endl;
    }
    return 0;
}
