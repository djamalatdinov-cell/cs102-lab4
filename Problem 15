#include <iostream>
using namespace std;
int main() {
  int date;
    cout<<"Enter today's day:";
    cin>>date;
    int fut;
    cout<<"Enter the number of days elapsed since today:";
    cin>>fut;

    switch (date) {
        case 0: cout<<"Today is Sunday and"; break;
            case 1: cout<<"Today is Monday and"; break;
            case 2: cout<<"Today is Tuesday and"; break;
            case 3: cout<<"Today is Wednesday and"; break;
            case 4: cout<<"Today is Thursday and"; break;
            case 5: cout<<"Today is Friday and"; break;
            case 6: cout<<"Today is Sunday and"; break;
            default: cout<<"You can enter for today's date only numbers from 0 to 6";
    }
    int futureDay;
    if(date<7) {
        futureDay=(date+fut)%7;
        switch (futureDay) {
            case 0:cout<<" the future day is Sunday"; break;
            case 1: cout<<" the future day is Monday"; break;
            case 2: cout<<" the future day is Tuesday"; break;
            case 3: cout<<" the future day is Wednesday"; break;
            case 4: cout<<" the future day is Thursday"; break;
            case 5: cout<<" the future day is Friday"; break;
            case 6: cout<<" the future day is Saturday"; break;
        }
    }
    return 0;
}
