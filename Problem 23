#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
int main() {
    srand(time(0));
    int card = rand() % 52;
    int rank = card % 13;
    int suit = card / 13;
    string ranks[] = {
        "Ace", "2", "3", "4", "5", "6", "7",
        "8", "9", "10", "Jack", "Queen", "King"
    };
    string suits[] = { "Clubs", "Diamonds", "Hearts", "Spades" };
    cout << "The card you picked is: "
         << ranks[rank] << " of " << suits[suit] << endl;

    return 0;
}
